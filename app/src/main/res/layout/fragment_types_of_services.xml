<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".Types_of_services">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="386dp"
            android:layout_height="88dp"
            android:layout_marginTop="32dp"
            android:text="SERVICES"

            android:textSize="60sp"
            android:textColor="#000000"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>
        <ImageButton
            android:id="@+id/salon"
            android:layout_width="185dp"
            android:layout_height="140dp"
            android:layout_marginTop="500dp"

           android:src="@mipmap/salon_foreground"
            android:textSize="30sp"
            android:scaleType="fitXY"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.929"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/painter"
            android:layout_width="185dp"
            android:layout_height="162dp"
            android:layout_marginTop="156dp"
            android:src="@mipmap/painter_foreground"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:textSize="30sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.929"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/electrician"
            android:layout_width="185dp"
            android:layout_height="162dp"
            android:layout_marginTop="328dp"

android:background="@mipmap/electrician_foreground"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.929"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/gardening"
            android:layout_width="185dp"
            android:layout_height="162dp"

            android:background="@mipmap/gardening_foreground"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.929"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/carpenter"
            android:layout_width="185dp"
            android:layout_height="162dp"
            android:layout_marginTop="652dp"
android:background="@mipmap/carpenter_foreground"
          android:scaleType="fitXY"
            android:padding="0dp"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/AC"
            android:layout_width="185dp"
            android:layout_height="139dp"
            android:layout_marginTop="500dp"
android:background="@mipmap/ac_foreground"

            android:scaleType="fitXY"
            android:padding="0dp"
            android:textSize="30sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <ImageButton
            android:id="@+id/appliances"
            android:layout_width="185dp"
            android:layout_height="162dp"
            android:layout_marginTop="328dp"
            android:src="@mipmap/appliances_foreground"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:textSize="25sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton

            android:id="@+id/plumber"
            android:layout_width="185dp"
            android:layout_height="162dp"
            android:layout_marginTop="156dp"
android:background="@mipmap/plumber_foreground"
            android:padding="0dp"
            android:scaleType="fitXY"


            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>